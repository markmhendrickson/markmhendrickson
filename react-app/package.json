{
  "name": "markmhendrickson",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate:favicons": "node scripts/generate-favicons.mjs",
    "generate:og": "node scripts/generate-og-image.mjs",
    "generate:og:post": "node scripts/generate-post-og-image.mjs",
    "generate:rss": "node scripts/generate-rss.mjs",
    "predev": "python3 ../../../scripts/generate_website_cache.py; test -f cache/posts.private.json || cp cache/posts.json cache/posts.private.json; npm run generate:rss",
    "dev": "vite",
    "dev:api": "node scripts/dev-newsletter-api.mjs",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "dev:ssr": "node server.js",
    "prebuild": "python3 ../../../scripts/generate_website_cache.py; test -f cache/posts.private.json || cp cache/posts.json cache/posts.private.json; npm run generate:rss",
    "build": "vite build",
    "build:ci": "npm run build && npm run build:ssr && NODE_ENV=production node server.js --prerender",
    "build:ssr": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:full": "npm run build && npm run build:ssr",
    "preview": "vite preview",
    "preview:ssr": "NODE_ENV=production PORT=3002 node server.js"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.21.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.47",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "vite": "^5.4.6"
  }
}
